<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
 
    <!-- byType example -->
    <bean id="employee" class="com.websystique.spring4.autowiring.bytype.Employee" autowire="byType"/>
 
    <bean id="employeeAddress" class="com.websystique.spring4.autowiring.bytype.EmployeeAddress" >
        <property name="street" value="112/223,SantaVilla"/>
        <property name="city" value="Nebraska"/>
    </bean>
 
</beans>